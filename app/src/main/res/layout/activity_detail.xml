<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_260sdp"
                        android:background="@color/blue_A400"
                        android:alpha="0.9"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_260sdp"
                        android:background="@color/grey_600"
                        android:alpha="0.4"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_80sdp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:background="@drawable/mokaspng"
                                android:layout_gravity="center"/>
                            <TextView
                                android:id="@+id/kategori"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kategori"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"/>
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@color/white"
                                app:cardBackgroundColor="@color/white"
                                app:cardElevation="@dimen/_2sdp"
                                app:cardMaxElevation="@dimen/_4sdp"
                                app:cardCornerRadius="@dimen/_9sdp"
                                app:cardUseCompatPadding="true"
                                android:padding="@dimen/_10sdp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:paddingRight="@dimen/_5sdp"
                                    android:paddingTop="@dimen/_20sdp"
                                    android:paddingBottom="@dimen/_20sdp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:id="@+id/isi">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_15sdp"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:id="@+id/txt_nama"
                                            android:padding="@dimen/_6sdp"
                                            android:text="Vixion 2014"/>
                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="@color/grey_200"
                                            android:layout_marginBottom="@dimen/_6sdp"/>
                                        <androidx.viewpager.widget.ViewPager
                                            android:id="@+id/viewPagerBanner"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_160sdp"
                                            android:focusableInTouchMode="true"
                                            />
                                        <androidx.cardview.widget.CardView
                                            android:layout_marginTop="@dimen/_6sdp"
                                            android:layout_gravity="center"
                                            android:layout_height="wrap_content"
                                            android:layout_width="wrap_content"
                                            android:background="@color/blue_400"
                                            app:cardCornerRadius="@dimen/_4sdp"
                                            app:cardMaxElevation="@dimen/_6sdp"
                                            app:cardBackgroundColor="@color/blue_A400"
                                            app:cardElevation="@dimen/_3sdp">
                                            <TextView
                                                android:layout_margin="@dimen/_5sdp"
                                                android:id="@+id/txt_harga"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textColor="@color/white"
                                                android:text="Rp. 60.000.000,00"
                                                android:textSize="@dimen/_18sdp"/>
                                        </androidx.cardview.widget.CardView>
                                        <TextView
                                            android:layout_marginTop="@dimen/_6sdp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_14sdp"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:padding="@dimen/_6sdp"
                                            android:text="Deskripsi"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_12sdp"
                                            android:textColor="@color/black"
                                            android:id="@+id/txt_deskripsi"
                                            android:padding="@dimen/_4sdp"
                                            android:text="Vixion 2014"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/_6sdp"
                                        android:layout_margin="@dimen/_6sdp"
                                        android:weightSum="10">
                                        <Button
                                            android:layout_weight="2"
                                            android:id="@+id/btn_phone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@color/blue_A400"
                                            android:text="Telphone"/>
                                        <View
                                            android:layout_weight="6"
                                            android:layout_width="1dp"
                                            android:layout_height="wrap_content"/>
                                        <Button
                                            android:layout_weight="2"
                                            android:id="@+id/btn_wa"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@color/green_400"
                                            android:text="Whatsapp"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</FrameLayout>