<LinearLayout android:layout_width="@dimen/_120sdp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/_1sdp"
    android:layout_marginBottom="@dimen/_1sdp"
    android:layout_marginLeft="@dimen/_6sdp"
    android:layout_marginRight="@dimen/_6sdp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_400"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardMaxElevation="@dimen/_6sdp"
        app:cardBackgroundColor="@color/white"
        android:padding="@dimen/_6sdp"
        app:cardElevation="@dimen/_3sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp">
                    <ImageView
                        android:id="@+id/img_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:background="@drawable/mokaspng"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_40sdp"
                    android:padding="@dimen/_5sdp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="Vixion 2013"
                        android:textSize="@dimen/_12sdp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:background="@color/blue_400"
                        app:cardCornerRadius="@dimen/_4sdp"
                        app:cardMaxElevation="@dimen/_6sdp"
                        app:cardBackgroundColor="@color/blue_A400"
                        app:cardElevation="@dimen/_3sdp">
                        <TextView
                            android:layout_margin="@dimen/_5sdp"
                            android:id="@+id/txt_harga"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="Rp. 60.000.000,00"
                            android:textSize="@dimen/_12sdp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@color/blue_400"
                    app:cardCornerRadius="@dimen/_4sdp"
                    app:cardMaxElevation="@dimen/_6sdp"
                    app:cardBackgroundColor="@color/red_400"
                    app:cardElevation="@dimen/_3sdp"
                    android:alpha="0.8">
                    <TextView
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/kategori"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="Motor Sport"
                        android:textSize="@dimen/_8sdp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@color/blue_400"
                    app:cardCornerRadius="@dimen/_4sdp"
                    app:cardMaxElevation="@dimen/_6sdp"
                    app:cardBackgroundColor="@color/blue_A700"
                    app:cardElevation="@dimen/_3sdp"
                    android:alpha="0.8">
                    <TextView
                        android:layout_margin="@dimen/_5sdp"
                        android:id="@+id/terjual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text=""
                        android:textSize="@dimen/_8sdp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>