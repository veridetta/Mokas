<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_160sdp"
                        android:background="@color/blue_A400"
                        android:alpha="0.9"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_160sdp"
                        android:background="@color/grey_600"
                        android:alpha="0.4"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_80sdp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:background="@color/white"
                                app:cardBackgroundColor="@color/white"
                                app:cardElevation="@dimen/_8sdp"
                                app:cardMaxElevation="@dimen/_10sdp"
                                app:cardCornerRadius="@dimen/_9sdp"
                                app:cardUseCompatPadding="false"
                                android:layout_marginBottom="@dimen/_12sdp"
                                android:padding="@dimen/_4sdp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:paddingRight="@dimen/_10sdp"
                                    android:paddingTop="@dimen/_20sdp"
                                    android:paddingBottom="@dimen/_20sdp">
                                    <TextView
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Kategori"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_20sdp" />
                                    <TextView
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Pilih Motor Idamanmu"
                                        android:textSize="@dimen/_18sdp" />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="@dimen/_12sdp"
                                        android:layout_marginBottom="@dimen/_12sdp"
                                        android:background="@color/grey_200"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="3">
                                        <LinearLayout
                                            android:id="@+id/sport"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                            <View
                                                android:layout_width="@dimen/_50sdp"
                                                android:layout_height="@dimen/_50sdp"
                                                android:layout_gravity="center"
                                                android:background="@drawable/sport"/>
                                            <TextView
                                                android:layout_marginTop="@dimen/_10sdp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Sport"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textSize="@dimen/_18sdp" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:id="@+id/bebek"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                            <View
                                                android:layout_width="@dimen/_50sdp"
                                                android:layout_height="@dimen/_50sdp"
                                                android:layout_gravity="center"
                                                android:background="@drawable/bebek"/>
                                            <TextView
                                                android:layout_marginTop="@dimen/_10sdp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Bebek"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textSize="@dimen/_18sdp" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:id="@+id/metik"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                            <View
                                                android:layout_width="@dimen/_50sdp"
                                                android:layout_height="@dimen/_50sdp"
                                                android:layout_gravity="center"
                                                android:background="@drawable/metik"/>
                                            <TextView
                                                android:layout_marginTop="@dimen/_10sdp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Metik"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textSize="@dimen/_18sdp" />
                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="@dimen/_12sdp"
                                        android:weightSum="3">
                                        <LinearLayout
                                            android:id="@+id/moge"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                            <View
                                                android:layout_width="@dimen/_50sdp"
                                                android:layout_height="@dimen/_50sdp"
                                                android:layout_gravity="center"
                                                android:background="@drawable/moge"/>
                                            <TextView
                                                android:layout_marginTop="@dimen/_10sdp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Moge"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textSize="@dimen/_18sdp" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:id="@+id/trail"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                            <View
                                                android:layout_width="@dimen/_50sdp"
                                                android:layout_height="@dimen/_50sdp"
                                                android:layout_gravity="center"
                                                android:background="@drawable/trail"/>
                                            <TextView
                                                android:layout_marginTop="@dimen/_10sdp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Trail"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textSize="@dimen/_18sdp" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:id="@+id/classic"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                            <View
                                                android:layout_width="@dimen/_50sdp"
                                                android:layout_height="@dimen/_50sdp"
                                                android:layout_gravity="center"
                                                android:background="@drawable/classic"/>
                                            <TextView
                                                android:layout_marginTop="@dimen/_10sdp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Classic"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:textSize="@dimen/_18sdp" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="@dimen/_550sdp">
                    <TextView
                        android:id="@+id/coba"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_600"
                        android:textSize="@dimen/_20sdp"
                        android:text="Belum ada data"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</FrameLayout>